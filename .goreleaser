builds:
  - binary: fcode
    main: ./cmd/fcode
    goos:
      - darwin
      - linux
    goarch:
      - amd64
      - arm64
    env:
      - CGO_ENABLED=0
    flags:
      - -mod=vendor

release:
  prerelease: auto

universal_binaries:
  - replace: true

brews:
  -
    name: fcode
    homepage: "https://github.com/bilgehannal/foldercode-cli"
    tap:
      owner: bilgehannal
      name: homebrew-bilgehan
    commit_author:
      name: bilgehannal
      email: bilgehan.nal@gmail.com

checksum:
  name_template: 'checksums.txt'